# Multilingual Video Pipeline Configuration
# Copy this file to .env and fill in your values

# External API Keys
GOOGLE_API_KEY=your_google_api_key_here
CIVITAI_API_KEY=your_civitai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///pipeline.db
REDIS_URL=redis://localhost:6379/0

# Processing Configuration
MAX_CONCURRENT_JOBS=5
VIDEO_QUALITY=best
TRANSCRIPTION_DEVICE=cpu
USE_API_SERVICES=true
API_TIMEOUT=600
API_POLL_INTERVAL=1.0

# API Service Endpoints
API_BASE_URL=http://127.0.0.1:6901
TRANSLATION_API_URL=http://127.0.0.1:6906
IMAGE_FINDER_API_URL=http://127.0.0.1:6907
WHISPER_API_URL=http://127.0.0.1:6904
VIENEU_TTS_API_URL=http://127.0.0.1:6903

# Model Configuration
WHISPER_MODEL=base
PHOWHISPER_MODEL=base
TRANSLATION_MODEL=deepseek-r1
TTS_MODEL=f5-tts

# Audio Configuration
AUDIO_SAMPLE_RATE=48000
TARGET_LUFS=-16.0
AUDIO_BITRATE=192k

# Video Configuration
VIDEO_CODEC=libx264
VIDEO_BITRATE=5M

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
YOUTUBE_RATE_LIMIT=10
IMAGE_DOWNLOAD_RATE_LIMIT=30
